@model TP1.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-sign-in-alt text-primary"></i> Connexion
                </h2>
                
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="votre@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <p class="text-center mb-0">
                    Pas encore de compte ? 
                    <a asp-action="Register" class="text-decoration-none">
                        <strong>Inscrivez-vous ici</strong>
                    </a>
                </p>

                <div class="mt-3 p-3 bg-light rounded">
                    <h6 class="mb-2"><i class="fas fa-info-circle text-info"></i> Comptes de test:</h6>
                    <small class="d-block">Admin: admin@terrains.com / Admin123!</small>
                    <small class="d-block">Fournisseur 1 (Lévis): fournisseur1@terrains.com / Fournisseur123!</small>
                    <small class="d-block">Fournisseur 2 (Québec): fournisseur2@terrains.com / Fournisseur123!</small>
                    <small class="d-block">Client: client@terrains.com / Client123!</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


