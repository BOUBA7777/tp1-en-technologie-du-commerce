<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Réservation Terrains</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-futbol me-2"></i>Terrains Foot
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto ms-3">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>
                        @if (!User.IsInRole("Fournisseur") && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-light fw-bold px-4 shadow-sm" asp-controller="Home" asp-action="Reserver" style="border-radius: 25px; color: #667eea;">
                                    <i class="fas fa-calendar-check me-2"></i>Réserver
                                </a>
                            </li>
                        }
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Client"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="Cart" asp-action="Index">
                                        <i class="fas fa-shopping-cart me-1"></i>Panier
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="Reservations" asp-action="MyBookings">
                                        <i class="fas fa-calendar-check me-1"></i>Mes Réservations
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="Reservations" asp-action="History">
                                        <i class="fas fa-file-invoice me-1"></i>Mes Factures
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Fournisseur"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="FournisseurTerrains" asp-action="Index">
                                        <i class="fas fa-futbol me-1"></i>Mes Terrains
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="FournisseurTerrains" asp-action="Gains">
                                        <i class="fas fa-chart-line me-1"></i>Mes Gains
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="Reservations" asp-action="History">
                                        <i class="fas fa-file-invoice me-1"></i>Mes Factures
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="Reservations" asp-action="Revenue">
                                        <i class="fas fa-chart-line me-1"></i>Mes Revenus
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-chart-line me-1"></i>Dashboard
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle px-3" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="fas fa-user me-2"></i>Profil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Connexion
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-light fw-bold px-4 shadow-sm" asp-controller="Account" asp-action="Register" style="border-radius: 25px; color: #667eea;">
                                    Inscription
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Panier flottant (masqué sur les pages de panier et checkout, et pour les fournisseurs et admin) -->
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
        var showFloatingCart = User.Identity?.IsAuthenticated == true 
            && controller != "Cart" 
            && controller != "Checkout"
            && !User.IsInRole("Fournisseur")
            && !User.IsInRole("Admin");
    }
    @if (showFloatingCart)
    {
        <a href="@Url.Action("Index", "Cart")" class="floating-cart-btn" id="floatingCart" title="Mon Panier">
            <i class="fas fa-shopping-cart"></i>
            <span class="cart-badge" id="cartBadge">0</span>
        </a>
    }

    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-futbol me-2"></i>Réservation Terrains</h5>
                    <p>Votre plateforme de réservation de terrains de football en ligne.</p>
                </div>
                <div class="col-md-3">
                    <h6>Liens</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">À propos</a></li>
                        <li><a href="#" class="text-white-50">Contact</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-white-50">Confidentialité</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Suivez-nous</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="text-white-50"><i class="fab fa-facebook fa-2x"></i></a>
                        <a href="#" class="text-white-50"><i class="fab fa-twitter fa-2x"></i></a>
                        <a href="#" class="text-white-50"><i class="fab fa-instagram fa-2x"></i></a>
                    </div>
                </div>
            </div>
            <hr class="bg-light">
            <p class="text-center text-white-50 mb-0">&copy; 2025 - Réservation Terrains - Tous droits réservés</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (showFloatingCart)
    {
        <script>
            // Mettre à jour le badge du panier flottant
            async function updateCartBadge() {
                try {
                    const response = await fetch('@Url.Action("GetCartCount", "Cart")');
                    if (response.ok) {
                        const data = await response.json();
                        const badge = document.getElementById('cartBadge');
                        const floatingCart = document.getElementById('floatingCart');
                        
                        if (badge && floatingCart) {
                            badge.textContent = data.count;
                            
                            if (data.count > 0) {
                                floatingCart.classList.add('has-items');
                                badge.style.display = 'flex';
                            } else {
                                floatingCart.classList.remove('has-items');
                                badge.style.display = 'none';
                            }
                        }
                    }
                } catch (error) {
                    console.error('Erreur mise à jour panier:', error);
                }
            }
            
            // Mettre à jour au chargement de la page
            document.addEventListener('DOMContentLoaded', updateCartBadge);
            
            // Mettre à jour toutes les 5 secondes (optionnel)
            setInterval(updateCartBadge, 5000);
        </script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
