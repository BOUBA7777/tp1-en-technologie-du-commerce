@model TP1.Models.Facture
@{
    ViewData["Title"] = "Facture " + Model.NumeroFacture;
}

<div class="card shadow">
    <div class="card-body p-5">
        <div class="row mb-5">
            <div class="col-6">
                <h2 class="text-primary"><i class="fas fa-futbol me-2"></i>Terrains Foot</h2>
                <p class="mb-0">123 Rue du Sport<br/>75000 Paris, France</p>
            </div>
            <div class="col-6 text-end">
                <h3>FACTURE</h3>
                <p class="mb-0">
                    <strong>N°:</strong> @Model.NumeroFacture<br/>
                    <strong>Date:</strong> @Model.Date.ToString("dd/MM/yyyy")
                </p>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-6">
                <h5>Facturé à:</h5>
                <p>
                    @Model.Reservation.Utilisateur.Nom<br/>
                    @Model.Reservation.Utilisateur.Email
                </p>
            </div>
        </div>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Description</th>
                    <th class="text-center">Quantité</th>
                    <th class="text-end">Prix unitaire</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <strong>@Model.Reservation.Creneau.Terrain.Nom</strong><br/>
                        <small class="text-muted">
                            @Model.Reservation.Creneau.Terrain.Localisation<br/>
                            @Model.Reservation.Creneau.Date.ToString("dd/MM/yyyy") 
                            - @Model.Reservation.Creneau.HeureDebut.ToString(@"hh\:mm") à @Model.Reservation.Creneau.HeureFin.ToString(@"hh\:mm")
                        </small>
                    </td>
                    <td class="text-center">1</td>
                    <td class="text-end">@Model.Reservation.Creneau.Prix.ToString("C")</td>
                    <td class="text-end"><strong>@Model.Montant.ToString("C")</strong></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total TTC:</strong></td>
                    <td class="text-end"><h4 class="text-primary mb-0">@Model.Montant.ToString("C")</h4></td>
                </tr>
            </tfoot>
        </table>

        <div class="mt-5 text-muted small">
            <p>Merci pour votre réservation !</p>
            <p class="mb-0">TVA non applicable, article 293 B du CGI.</p>
        </div>
    </div>
</div>

<div class="mt-3 text-center d-print-none">
    <button onclick="window.print()" class="btn btn-primary me-2">
        <i class="fas fa-print me-2"></i>Imprimer
    </button>
    <a asp-action="History" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Retour
    </a>
</div>

@section Scripts {
    <style>
        @@media print {
            .d-print-none {
                display: none !important;
            }
        }
    </style>
}


