@model IEnumerable<TP1.Models.Reservation>
@{
    ViewData["Title"] = "Revenus";
    var totalRevenu = ViewBag.TotalRevenu as decimal? ?? 0;
    var totalReservations = ViewBag.TotalReservations as int? ?? 0;
}

<h2 class="mb-4"><i class="fas fa-chart-line me-2"></i>Tableau des Revenus</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                <h3 class="text-success">@totalRevenu.ToString("C")</h3>
                <p class="text-muted mb-0">Revenu Total</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                <h3 class="text-primary">@totalReservations</h3>
                <p class="text-muted mb-0">Réservations Payées</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                <h3 class="text-info">@(totalReservations > 0 ? "$" + (totalRevenu / totalReservations).ToString("0.00") : "$0.00")</h3>
                <p class="text-muted mb-0">Panier Moyen</p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Historique des Réservations</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Client</th>
                        <th>Terrain</th>
                        <th>Créneau</th>
                        <th>Places</th>
                        <th>Montant</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.DateReservation.ToString("dd/MM/yyyy")</td>
                            <td>
                                <strong>@reservation.Utilisateur.Nom</strong><br/>
                                <small class="text-muted">@reservation.Utilisateur.Email</small>
                            </td>
                            <td>@reservation.Creneau.Terrain.Nom</td>
                            <td>
                                <small>
                                    @reservation.Creneau.Date.ToString("dd/MM/yyyy")<br/>
                                    @reservation.Creneau.HeureDebut.ToString(@"hh\:mm") - @reservation.Creneau.HeureFin.ToString(@"hh\:mm")
                                </small>
                            </td>
                            <td>1 terrain</td>
                            <td><strong class="text-success">@reservation.MontantTotal.ToString("C")</strong></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


