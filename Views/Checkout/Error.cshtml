@{
    ViewData["Title"] = "Erreur de paiement";
}

<div class="text-center py-5">
    <i class="fas fa-times-circle text-danger" style="font-size: 6rem;"></i>
    <h1 class="display-4 mt-4">Erreur de paiement</h1>
    <p class="lead mb-4">Une erreur s'est produite lors du traitement de votre paiement.</p>
    <p>Veuillez réessayer ou contacter le support si le problème persiste.</p>
    
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary btn-lg me-2">
            <i class="fas fa-redo me-2"></i>Réessayer
        </a>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-shopping-cart me-2"></i>Retour au panier
        </a>
    </div>
</div>


