@{
    ViewData["Title"] = "Paiement réussi";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-check-circle text-success" style="font-size: 6rem;"></i>
    </div>
    <h1 class="display-4 mb-4">Paiement réussi !</h1>
    <p class="lead mb-4">Votre réservation a été confirmée avec succès.</p>
    
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h5 class="mb-3"><i class="fas fa-info-circle text-primary me-2"></i>Que faire maintenant ?</h5>
            <ul class="list-unstyled text-start">
                <li class="mb-2"><i class="fas fa-envelope text-success me-2"></i>Un email de confirmation vous a été envoyé</li>
                <li class="mb-2"><i class="fas fa-file-invoice text-primary me-2"></i>Votre facture est disponible dans votre espace</li>
                <li class="mb-2"><i class="fas fa-calendar-check text-info me-2"></i>Consultez vos réservations à tout moment</li>
            </ul>
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Reservations" asp-action="MyBookings" class="btn btn-primary btn-lg me-2">
            <i class="fas fa-calendar-check me-2"></i>Voir mes réservations
        </a>
        <a asp-controller="Reservations" asp-action="History" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-file-invoice me-2"></i>Voir mes factures
        </a>
    </div>
</div>


