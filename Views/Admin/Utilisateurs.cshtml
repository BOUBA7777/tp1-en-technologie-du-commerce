@model IEnumerable<TP1.Models.Utilisateur>
@{
    ViewData["Title"] = "Gestion des Utilisateurs";
    var utilisateursFictifs = ViewBag.UtilisateursFictifs as List<TP1.Models.DummyJsonUser>;
    var totalFictifs = ViewBag.TotalFictifs as int? ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>Gestion des Utilisateurs</h2>
    <a asp-action="Dashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Retour au Dashboard
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Tous les Utilisateurs</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Rôle</th>
                        <th>Réservations</th>
                        <th>Total Dépensé</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>@user.Nom</strong></td>
                            <td>@user.Email</td>
                            <td>
                                @switch (user.Role)
                                {
                                    case "Admin":
                                        <span class="badge bg-danger">Admin</span>
                                        break;
                                    case "Fournisseur":
                                        <span class="badge bg-warning">Fournisseur</span>
                                        break;
                                    case "Client":
                                        <span class="badge bg-primary">Client</span>
                                        break;
                                }
                            </td>
                            <td class="text-center">@user.Reservations.Count</td>
                            <td><strong class="text-success">@user.Reservations.Where(r => r.Statut == "Payee").Sum(r => r.MontantTotal).ToString("C")</strong></td>
                        </tr>
                    }
                    @if (utilisateursFictifs != null && utilisateursFictifs.Any())
                    {
                        @foreach (var user in utilisateursFictifs)
                        {
                            <tr>
                                <td><strong>@user.FirstName @user.LastName</strong></td>
                                <td>@user.Email</td>
                                <td><span class="badge bg-primary">Client</span></td>
                                <td class="text-center">0</td>
                                <td><strong class="text-success">$0.00</strong></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


