@model IEnumerable<TP1.Models.Terrain>
@{
    ViewData["Title"] = "Gestion des Terrains";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-futbol me-2"></i>Gestion des Terrains</h2>
    <a asp-action="Dashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Retour au Dashboard
    </a>
</div>

<div class="row">
    @foreach (var terrain in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(terrain.ImageUrl))
                {
                    <img src="@terrain.ImageUrl" class="card-img-top" alt="@terrain.Nom" style="height: 200px; object-fit: cover;">
                }
                
                <div class="card-body">
                    <h5 class="card-title">@terrain.Nom</h5>
                    <p class="text-muted mb-2">
                        <i class="fas fa-map-marker-alt me-1"></i>@terrain.Localisation
                    </p>
                    <span class="badge bg-info mb-3">@terrain.Type</span>
                    
                    @if (!string.IsNullOrEmpty(terrain.Description))
                    {
                        <p class="card-text small">@terrain.Description</p>
                    }
                    
                    <hr>
                    
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary mb-0">@terrain.Creneaux.Count</h4>
                            <small class="text-muted">Créneaux</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success mb-0">@terrain.Creneaux.Count(c => !c.EstDisponible)</h4>
                            <small class="text-muted">Réservés</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


