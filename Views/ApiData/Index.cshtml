@model List<TP1.Models.DummyJsonUser>

@{
    ViewData["Title"] = "Données API REST - Dummy JSON";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="fas fa-cloud-download-alt"></i> Données de l'API REST Externe</h2>
                    <p class="text-muted">
                        <i class="fas fa-info-circle"></i> 
                        Source : <strong>@ViewBag.ApiSource</strong>
                    </p>
                </div>
                <div>
                    <span class="badge bg-primary fs-5">
                        <i class="fas fa-users"></i> @ViewBag.TotalUsers utilisateurs récupérés
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-circle"></i> 
            Aucune donnée disponible depuis l'API externe. Vérifiez votre connexion Internet.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-database"></i> Utilisateurs récupérés via API REST (Dummy JSON)
                </h5>
                <small>Démonstration de l'intégration d'une API REST externe comme demandé dans le TP</small>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Photo</th>
                                <th>ID</th>
                                <th>Nom Complet</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Âge</th>
                                <th>Ville</th>
                                <th>Entreprise</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@user.Image" 
                                             alt="@user.FullName" 
                                             class="rounded-circle" 
                                             width="50" 
                                             height="50"
                                             onerror="this.src='https://via.placeholder.com/50'">
                                    </td>
                                    <td><span class="badge bg-secondary">@user.Id</span></td>
                                    <td><strong>@user.FullName</strong></td>
                                    <td><code>@user.Username</code></td>
                                    <td>
                                        <a href="mailto:@user.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope"></i> @user.Email
                                        </a>
                                    </td>
                                    <td>
                                        <i class="fas fa-phone"></i> @user.Phone
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@user.Age ans</span>
                                    </td>
                                    <td>
                                        @if (user.Address != null)
                                        {
                                            <i class="fas fa-map-marker-alt"></i> @user.Address.City
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.Company != null)
                                        {
                                            <small>@user.Company.Name</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted">
                <small>
                    <i class="fas fa-info-circle"></i> 
                    Ces données sont récupérées en temps réel depuis l'API REST publique Dummy JSON.
                    Elles démontrent l'intégration d'une API REST externe comme requis dans le TP (section 3.3).
                </small>
            </div>
        </div>

        <div class="mt-4">
            <div class="alert alert-info">
                <h5><i class="fas fa-graduation-cap"></i> Note pédagogique</h5>
                <p class="mb-0">
                    Cette page démontre l'utilisation de <strong>HttpClient</strong> en C# pour consommer une API REST externe.
                    L'API Dummy JSON (<a href="https://dummyjson.com" target="_blank">https://dummyjson.com</a>) 
                    fournit des données factices pour les tests et le développement.
                </p>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au Dashboard
        </a>
    </div>
</div>






