@model TP1.Models.Terrain
@{
    ViewData["Title"] = "Supprimer " + Model.Nom;
}

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Retour à mes terrains
    </a>
</div>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>Confirmer la Suppression
        </h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Attention !</strong> Cette action est irréversible.
        </div>
        
        <h4 class="mb-4">Êtes-vous sûr de vouloir supprimer ce terrain ?</h4>
        
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Nom">
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Nom :</dt>
                    <dd class="col-sm-8"><strong>@Model.Nom</strong></dd>
                    
                    <dt class="col-sm-4">Localisation :</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-danger">
                            <i class="fas fa-map-marker-alt me-1"></i>@Model.Localisation
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4">Type :</dt>
                    <dd class="col-sm-8">
                        @if (Model.Type == "11-a-side")
                        {
                            <span class="badge bg-success">11 vs 11</span>
                        }
                        else if (Model.Type == "7-a-side")
                        {
                            <span class="badge bg-info">7 vs 7</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">5 vs 5</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Créneaux :</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary">@Model.Creneaux.Count créneaux</span>
                    </dd>
                    
                    <dt class="col-sm-4">Description :</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
            </div>
        </div>
        
        <hr class="my-4">
        
        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg px-5 me-2">
                <i class="fas fa-trash me-2"></i>Oui, Supprimer Définitivement
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                <i class="fas fa-times me-2"></i>Non, Annuler
            </a>
        </form>
    </div>
</div>





