@model TP1.Models.Terrain
@{
    ViewData["Title"] = "Modifier " + Model.Nom;
}

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Retour à mes terrains
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">
            <i class="fas fa-edit me-2"></i>Modifier le Terrain
        </h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="row g-3">
                <!-- Nom -->
                <div class="col-md-6">
                    <label asp-for="Nom" class="form-label fw-bold">Nom du Terrain</label>
                    <input asp-for="Nom" class="form-control form-control-lg" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
                
                <!-- Localisation -->
                <div class="col-md-6">
                    <label asp-for="Localisation" class="form-label fw-bold">Localisation</label>
                    <select asp-for="Localisation" class="form-select form-select-lg">
                        <option value="">-- Choisir une ville --</option>
                        <option value="Lévis">Lévis</option>
                        <option value="Québec">Québec</option>
                    </select>
                    <span asp-validation-for="Localisation" class="text-danger"></span>
                </div>
                
                <!-- Type -->
                <div class="col-md-6">
                    <label asp-for="Type" class="form-label fw-bold">Type de Terrain</label>
                    <select asp-for="Type" class="form-select form-select-lg">
                        <option value="">-- Choisir un type --</option>
                        <option value="5-a-side">5 vs 5 (Petit)</option>
                        <option value="7-a-side">7 vs 7 (Moyen)</option>
                        <option value="11-a-side">11 vs 11 (Grand)</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                
                <!-- Image URL -->
                <div class="col-md-6">
                    <label asp-for="ImageUrl" class="form-label fw-bold">URL de l'Image</label>
                    <input asp-for="ImageUrl" class="form-control form-control-lg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                
                <!-- Description -->
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <!-- Boutons -->
                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-5 me-2">
                        <i class="fas fa-save me-2"></i>Enregistrer les Modifications
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





