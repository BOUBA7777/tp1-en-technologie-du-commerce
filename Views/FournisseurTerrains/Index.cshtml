@model IEnumerable<TP1.Models.Terrain>
@{
    ViewData["Title"] = "Mes Terrains";
}

<div class="mb-4">
    <h1 class="display-5 fw-bold">
        <i class="fas fa-futbol text-primary me-3"></i>Mes Terrains
    </h1>
    <p class="lead text-muted">Gérez vos terrains de football</p>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg shadow">
        <i class="fas fa-plus-circle me-2"></i>Ajouter un Nouveau Terrain
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-5">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h4>Vous n'avez pas encore de terrains</h4>
        <p class="mb-3">Commencez par ajouter votre premier terrain !</p>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Ajouter un Terrain
        </a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var terrain in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@terrain.ImageUrl" class="card-img-top" alt="@terrain.Nom" style="height: 200px; object-fit: cover;">
                    
                    <div class="position-absolute top-0 start-0 m-3">
                        <span class="badge bg-danger fs-6 px-3 py-2">
                            <i class="fas fa-map-marker-alt me-1"></i>@terrain.Localisation
                        </span>
                    </div>
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@terrain.Nom</h5>
                        
                        <div class="mb-3">
                            @if (terrain.Type == "11-a-side")
                            {
                                <span class="badge bg-success px-3 py-2">
                                    <i class="fas fa-users me-1"></i>11 vs 11
                                </span>
                            }
                            else if (terrain.Type == "7-a-side")
                            {
                                <span class="badge bg-info px-3 py-2">
                                    <i class="fas fa-user-friends me-1"></i>7 vs 7
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark px-3 py-2">
                                    <i class="fas fa-user-group me-1"></i>5 vs 5
                                </span>
                            }
                        </div>
                        
                        <p class="card-text text-muted small flex-grow-1">@terrain.Description</p>
                        
                        <div class="mb-3 p-2 bg-light rounded text-center">
                            <i class="fas fa-calendar-check text-primary"></i>
                            <strong class="ms-2">@terrain.Creneaux.Count(c => c.EstDisponible)</strong>
                            <small class="text-muted">créneaux disponibles</small>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@terrain.Id" class="btn btn-primary flex-fill">
                                <i class="fas fa-edit me-1"></i>Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@terrain.Id" class="btn btn-danger flex-fill">
                                <i class="fas fa-trash me-1"></i>Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}





